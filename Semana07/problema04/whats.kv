BoxLayout:
    canvas:
		Color:
			rgba: 0.92,0.92,0.92,1 
        Rectangle:
            size: self.size
            pos: self.pos
    orientation:'vertical'
    AppBar:
    Menu:
    ScrollView:
        BoxLayout:
            size_hint_y:None
            height:self.minimum_height
            orientation:'vertical'
            Chat:
            Chat2:
            Chat:
            Chat2:
            Chat:
            Chat2:
            Chat:
            Chat:
            Widget:


<AppBar@BoxLayout>:
    padding:'6dp'
    canvas:
        Color:
            rgba: 0,0.3,0.13,1
        Rectangle:
            size:self.size
            pos:self.pos
    size_hint_y:None
    height:'50dp'
    Label:
        text:'ZapZap'
        bold:True
        font_size:'20dp'
        haling:'left'
        text_size:self.size
        valign:'center'
        padding_x:'10dp'
    Icon:
        background_normal:'lupa.png'
        active:True
    Icon:
        background_normal:'pontos.png'
        active:True

<Foto@Widget>:
    canvas:
        Color:
            rgba:1,1,1,1
        Ellipse:
            source:'zika.png'
            size:self.size
            pos:self.pos
    size_hint_x:None
    width:self.height

<Foto2@Widget>:
    canvas:
        Color:
            rgba:1,1,1,1
        Ellipse:
            source:'chavoso.png'
            size:self.size
            pos:self.pos
    size_hint_x:None
    width:self.height

<Menu@BoxLayout>:
    canvas:
        Color:
            rgba: 0,0.3,0.13,1 
        Rectangle:
            size:self.size
            pos:self.pos
    size_hint_y:None
    height:'35dp'
    padding:'3dp'
    spacing:'10dp'
    Icon:
        background_normal:'camera.png'
    MenuButton:
        text:'CONVERSAS'
        active:True
    MenuButton:
        text: 'STATUS'
    MenuButton:
        text: 'CHAMADAS'

